{
  "name": "af-tms-anti-fraud-monitoring",
  "version": "1.0.0",
  "description": "Anti-Fraud Transaction Monitoring System for New Zealand Financial Institutions - Class-Based Architecture",
  "main": "server-new.js",
  "scripts": {
    "start": "node server-new.js",
    "start:old": "node server.js",
    "dev": "nodemon server-new.js",
    "dev:old": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "build": "npm run build:frontend",
    "build:frontend": "cd frontend && npm run build",
    "install:all": "npm install && cd frontend && npm install",
    "dev:all": "concurrently \"npm run dev\" \"cd frontend && npm start\"",
    "seed": "node backend/scripts/seedData.js",
    "db:init": "npm run seed",
    "lint": "eslint backend/ --ext .js",
    "lint:fix": "eslint backend/ --ext .js --fix",
    "docs": "jsdoc backend/ -r -d docs/",
    "clean": "rm -rf node_modules frontend/node_modules logs/",
    "docker:build": "docker build -t af-tms .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f af-tms-app"
  },
  "keywords": [
    "fraud-detection", 
    "aml", 
    "compliance", 
    "new-zealand", 
    "fintech", 
    "class-based-architecture",
    "nodejs",
    "express",
    "postgresql"
  ],
  "author": "AF-TMS Development Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "redis": "^4.6.10",
    "socket.io": "^4.7.4",
    "joi": "^17.11.0",
    "winston": "^3.11.0",
    "dotenv": "^16.3.1",
    "moment": "^2.29.4",
    "node-cron": "^3.0.3",
    "multer": "^1.4.5-lts.1",
    "csv-parser": "^3.0.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "concurrently": "^8.2.2",
    "eslint": "^8.55.0",
    "eslint-config-standard": "^17.1.0",
    "jsdoc": "^4.0.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/af-tms.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/af-tms/issues"
  },
  "homepage": "https://github.com/your-org/af-tms#readme",
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "backend/**/*.js",
      "!backend/scripts/**",
      "!backend/config/**"
    ],
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/tests/**/*.spec.js"
    ]
  },
  "eslintConfig": {
    "extends": ["standard"],
    "env": {
      "node": true,
      "jest": true
    },
    "rules": {
      "no-console": "warn",
      "prefer-const": "error"
    }
  }
}
